<!-- home page header -->
<header id="myCarousel" class="carousel slide home-page-carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active home-page-active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
    <li data-target="#myCarousel" data-slide-to="3"></li>
  </ol>

  <!-- Wrapper for Slides -->
  <div class="carousel-inner home-page-carousel-inner">
    <div class="item active home-page-item home-page-active">
      <!-- Set the first background image using inline CSS below. -->
      <div class="fill" style="background-image:url('<%= asset_path 'city.jpg' %>');"></div>
      <div class="carousel-caption">
        <h1 style="color:black">Welcome to the world of trips.</h1>
      </div>
    </div>

    <div class="item home-page-item">
      <!-- Set the second background image using inline CSS below. -->
      <div class="fill" style="background-image:url('<%= asset_path 'mountain.jpg' %>');"></div>
      <div class="carousel-caption">
        <h1>Enjoy new experiences.</h1>
      </div>
    </div>

    <div class="item home-page-item">
      <!-- Set the third background image using inline CSS below. -->
      <div class="fill" style="background-image:url('<%= asset_path 'beach.jpg' %>');"></div>
      <div class="carousel-caption">
        <h1 style="color:black">Explore the seas.</h1>
      </div>
    </div>

    <div class="item home-page-item">
      <!-- Set the third background image using inline CSS below. -->
      <div class="fill" style="background-image:url('<%= asset_path 'mountain2.jpg' %>');"></div>
      <div class="carousel-caption">
        <h1>Backpack around nature.</h1>
      </div>
    </div>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
      <span class="icon-prev"></span>
  </a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next">
      <span class="icon-next"></span>
  </a>

</header>

<!-- home page search form -->
<div class="container home-page-form">
  <%= form_tag("/search", method: "get", class: 'form-inline') do %>
    <div class="form-group">
       <%= label_tag :city %>
        <input list="city" name="city" class="form-control">
          <datalist id="city">
            <%= options_for_select(@cities) %>
          </datalist>
    </div>

    <div class="form-group">
      <%= label_tag :check_in_date %>
      <%= date_field_tag :check_in_date, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= label_tag :check_out_date %>
      <%= date_field_tag :check_out_date, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= label_tag :num_guests %>
      <%= select_tag :num_guests, options_for_select(1..16), class: 'form-control', include_blank: true %>
    </div>

    <%= submit_tag "Search", class: "btn btn-info btn-lg" %>
  <% end %>
</div>